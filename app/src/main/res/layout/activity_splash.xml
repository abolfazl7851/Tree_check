<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Splash"
    android:background="@android:color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نرم افزار مدیریت درختان"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:visibility="invisible"
        android:layout_above="@+id/splash_build_text"
        android:layout_marginBottom="80dp"
        android:id="@+id/splash_text"
        android:textColor="@color/colorPrimary"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/splash_lin"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:background="@drawable/splash_image_round"
        android:layout_centerHorizontal="true"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/trees"
        android:id="@+id/splash_image"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textSize="10dp"
        android:id="@+id/splash_build_text"
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>